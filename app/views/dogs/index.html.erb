<p id="notice"><%= notice %></p>


<div class="card mb-4">
  <div class="card-header">
      <i class="fas fa-table me-1"></i>
      <h1>Dogs</h1>
  </div>
  <div class="card-body">
    <table id="datatablesSimple">
      <thead>
        <tr>
          <th>Name</th>
          <th>Breed</th>
          <th>Age</th>
          <th>Gender</th>
          <th>Coat Length</th>
          <th>Size</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @dogs.each do |dog| %>
          <tr>
            <td><%= dog.name %></td>
            <td><%= dog.breed %></td>
            <td><%= dog.age %></td>
            <td><%= dog.gender %></td>
            <td><%= dog.coat_length %></td>
            <td><%= dog.size %></td>
            <td><%= dog.description %></td>
            <td><%= link_to 'Show', dog %></td>
            <td><%= link_to 'Edit', edit_dog_path(dog) %></td>
            <td><%= link_to 'Destroy', dog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

<%= link_to 'New Dog', new_dog_path, class: "btn btn-outline-dark" %>
